configuration {
  display-underline: false;
	modi:                       "drun,window";
    show-icons:                 false;
    display-drun:               "apps";
    display-window:             "windows";
	drun-display-format:        "{name}";
	window-format:              "{w} · {c} · {t}";
}

@theme "./colors.rasi"

* {
    font:                        "Departure Mono 11";
}

window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       340px;
    x-offset:                    0px;
    y-offset:                    0px;

    enabled:                     true;
    border: 2px;
    border-color: @selected;
    border-radius:               0px;
    cursor:                      "default";
    background-color:            #0c0b10;
}

mainbox {
    enabled:                     true;
    spacing:                     0px;
    background-color:            transparent;
    orientation:                 vertical;
    children:                    [ "inputbar" ];
    border: none;
}

listbox {
    spacing:                     8px;
    padding:                     8px 20px 20px 20px;
    background-color:            transparent;
    orientation:                 vertical;
    children:                    [ "message", "listview" ];
    border: none;
}

inputbar {
    enabled:                     true;
    spacing:                     6px;
    padding:                     12px 10px 12px 10px;
    background-color:            transparent;
    text-color:                  @foreground;
    orientation:                 horizontal;
    children:                    [ "entry" ];
    border: none;
}

textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    str:                         "";
    padding:                     12px 23px 12px 16px;
    border-radius:               4px;
    background-color:            @background-alt;
    text-color:                  inherit;
}

entry {
    enabled:                     true;
    expand:                      true;
    padding:                     8px 0px 8px 20px;
    border-radius:               0px;
    background-color:            inherit;
    text-color:                  @foreground;
    placeholder:                 "";
    placeholder-color:           inherit;
}

mode-switcher{
    enabled:                     true;
    spacing:                     8px;
    background-color:            transparent;
    text-color:                  @foreground;
}

button {
    padding:                     10px 12px;
    border-radius:               10px;
    background-color:            #f0f0f010;
    text-color:                  inherit;
}

button selected {
    background-color:            #f0f0f018;
    text-color:                  @foreground;
}

listview {
    enabled:                     true;
    columns:                     1;
    lines:                       1;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    spacing:                     0px;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      "default";
    border: none;
}

element {
    enabled:                     true;
    spacing:                     10px;
    padding:                     12px 0px 12px 20px;
    border-radius:               0px;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      pointer;
    alternate: false;
    highlight: none;
}

element normal.normal {
    background-color:            inherit;
    text-color:                  inherit;
    alternate: false;
    highlight: none;
}

element normal.urgent {
    background-color:            @urgent;
    text-color:                  @foreground;
    alternate: false;
    highlight: none;
}

element normal.active {
    background-color:            @active;
    text-color:                  @foreground;
    alternate: false;
    highlight: none;
}

element selected.normal {
    background-color:            #f0f0f010;
    text-color:                  inherit;
    alternate: false;
    highlight: none;
}

element selected.urgent {
    background-color:            @urgent;
    text-color:                  @foreground;
    alternate: false;
    highlight: none;
}

element selected.active {
    background-color:            @urgent;
    text-color:                  @foreground;
    alternate: false;
    highlight: none;
}

element-text {
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
    highlight: none;
}

message {
    background-color:            transparent;
}

textbox {
    padding:                     12px;
    border-radius:               100%;
    background-color:            @background-alt;
    text-color:                  @foreground;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

error-message {
    padding:                     15px;
    border-radius:               0px;
    background-color:            @background;
    text-color:                  @foreground;
}
